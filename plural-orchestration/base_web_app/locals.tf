###############################################################################
# LOCALS #
###############################################################################

locals {
  common_tags = {
    company      = var.company
    project      = "${var.company} - ${var.project}"
    billing_code = var.billing_code
  }

  s3_bucket_name = "globo-web-app-${random_integer.s3.result}"
}

resource "random_integer" "s3" {
  min = 1000
  max = 9999
}